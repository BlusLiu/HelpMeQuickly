<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">
    <LinearLayout
        android:id="@+id/my_task_top"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00baad"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3">
            <ImageView
                android:id="@+id/write_evaluate_back"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/angleleft" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="发表评价"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/evaluate_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:paddingLeft="70dp"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/task_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="任务的主题"
            android:textColor="#8a8a8a"
            android:textSize="18dp" />
        <RatingBar
            android:id="@+id/evaluate_rb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/FiveStarsStyle1"
            android:isIndicator="false"
            android:numStars="5"
            android:progressTint="#ffff37"
            android:rating="5"
            android:stepSize="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享你的体验吧"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/evaluate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="感觉怎么样？和大家分享一下吧"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="80dp"
            android:background="@null"
            />
    </LinearLayout>

</LinearLayout>