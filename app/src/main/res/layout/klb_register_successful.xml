<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/helloworld"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#00baad"
        android:orientation="horizontal">
    </LinearLayout>
    <ImageView
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:background="@mipmap/register_success"/>
    <Button
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        android:text="校 园 认 证"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:background="@drawable/yuanjiao"
        android:id="@+id/school_authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="center"
        android:text="认证后可享受完整功能"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/school_authentication_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/yuanjiao_edge"
        android:text="稍 后 认 证"
        android:textColor="#000000"
        android:textSize="16dp" />

</LinearLayout>